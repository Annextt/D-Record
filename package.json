{
  "name": "electron-screen-recorder",
  "version": "1.0.0",
  "description": "Gravador de Tela com Instant Replay",
  "main": "src/main/main.js",
  "author": "David",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64"
  },
  "keywords": [
    "screen recorder",
    "instant replay"
  ],
  "devDependencies": {
    "electron": "^39.2.4",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.david.screenrecorder",
    "productName": "D-Recorder",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "src/renderer/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}